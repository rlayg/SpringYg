<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="student1" class="DI03.Student">
		<!-- <property name="name" value="양만춘"></property> -->
		<!-- 위 주석 풀어도 양만춘으로 바뀜 - property위치가 어디든 생성자(constructor-arg)가 먼저 실행되고 세터 실행 -->
		<constructor-arg><value>연개소문</value></constructor-arg>
		<constructor-arg value="50"/>
		<constructor-arg><value>4학년</value></constructor-arg>
		<constructor-arg><value>25번</value></constructor-arg>
	</bean>
	<bean id="student2" class="DI03.Student">
		<!-- 생성자 위치는 차례대로 해야하는데 바꾸고싶으면 이렇게 index넣음 -->
		<constructor-arg index="1" value="30"/>
		<constructor-arg index="0" value="김유신"/>
		<constructor-arg type="java.lang.String" value="30"/>
		<constructor-arg value="11번"/>
			
		<!-- 
		<constructor-arg><value>김유신</value></constructor-arg>
		<constructor-arg value="30"/>
		<constructor-arg><value>3학년</value></constructor-arg>
		<constructor-arg><value>11번</value></constructor-arg>
		 -->
		<property name="name" value="김춘추"/>
	</bean>
	
	<bean id="studentInfo" class="DI03.StudentInfo">
		<constructor-arg><ref bean="student1"/> </constructor-arg>
	</bean>

</beans>
